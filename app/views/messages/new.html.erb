
  <%= form_for(@message, html: { multipart: true }) do |f| %>
      <% if @message.errors.any? %>
          <ul>
            <% @message.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
      <% end %>
      <div class="new_message">
        <p>
          <%= f.label :title, 'Title:' %>
        </p>
        <p>
          <%= f.text_field :title %>
        </p>
        <p><%= f.label :receiver, 'To:' %></p>
        <p><%= f.email_field :receiver  %></p>
        <p><%= f.label :content, 'Message:' %></p>
        <p><%= f.text_area :content %></p>
        <p id="sumbit"><%= f.submit %></p>
      </div>
  <%end %>


