<h1> Insert your Auction data below</h1>

  <%= form_for(@auction) do |f| %>
    <% if @auction.errors.any? %>
        <ul>
          <% @auction.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>
        </ul>
    <% end %>
    <div class="new_auction">

      <p class ="title"><%= f.label :title %></p>
      <p><%= f.text_field :title %></p>

      <p><%= f.label :description %></p>

      <div class="description">
        <%= f.text_area :description  %>
      </div>
      <p>
      <%= f.label :starting_price %>
      <%= f.number_field :starting_price, min: 0%>

      <%= f.label :duration %>
      <%= f.number_field :duration, in: 1..14 %>
      </p>

      <p  class="picture">
            <%= f.file_field :picture %>
      </p>

      <p>
      <%= f.submit %>
      </p>
    </div>

  <%end %>

